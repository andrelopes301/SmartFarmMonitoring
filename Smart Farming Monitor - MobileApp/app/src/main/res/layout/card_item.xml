<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    android:id="@+id/card"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="16dp"
    app:cardElevation="1dp"
    app:cardPreventCornerOverlap="true"
    android:clickable="true"
    android:focusable="true"
    android:layout_marginVertical="8dp"
    android:foreground="?android:attr/selectableItemBackground"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/cardImage"
            android:layout_width="140dp"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            tools:src="@drawable/lettuce_farm"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginHorizontal="12dp"
            android:layout_marginVertical="12dp"
            >


            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Alfaces"
                android:fontFamily="@font/roboto_bold"
                android:textSize="18sp"
                android:textColor="#C1000000"
                />





            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:orientation="horizontal"
                android:layout_marginTop="12dp"

                >
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/healthStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="bottom"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="#75000000"
                    android:layout_alignParentBottom="true"
                    android:text="Health Status:"
                    android:textSize="12sp" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/health"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="bottom|end"
                    android:fontFamily="@font/roboto_bold"
                    android:textColor="#90000000"
                    tools:text="Good"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="8dp"
                    android:layout_toEndOf="@id/healthStatus"
                    android:textSize="14sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:orientation="horizontal"
                android:gravity="bottom"
                >
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/waterPump"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="bottom"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="#75000000"
                    android:layout_alignParentBottom="true"
                    android:text="Water Pump System:"
                    android:textSize="12sp" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/switchWaterPump"
                    android:layout_width="wrap_content"
                    android:fontFamily="@font/roboto_bold"
                    android:textColor="#90000000"
                    android:layout_height="match_parent"
                    android:gravity="bottom"
                    tools:text="On"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="8dp"
                    android:layout_alignParentEnd="true"
                    android:textSize="14sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:orientation="horizontal"
                android:gravity="bottom"
                >
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/plantationID"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="bottom"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="#75000000"
                    android:layout_alignParentBottom="true"
                    android:text="ID:"
                    android:textSize="12sp" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/plantID"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="bottom"
                    android:fontFamily="@font/roboto_bold"
                    android:textColor="#90000000"
                    tools:text="1293812303"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="8dp"
                    android:layout_alignParentEnd="true"
                    android:textSize="14sp" />
            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>




